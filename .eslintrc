{
  "env": {
    "node": true,
    "browser": true,
    "mocha": true
  },
  "globals": {
    "cordova": true,
    "FileTransfer": true,
    "FileError": true,
    "resolveLocalFileSystemURL": true
  },
  "rules": {
    "camelcase": 2,
    "curly": 2,
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-in-brackets": [2, "never"],
    "space-infix-ops": 2,
    "space-after-keywords": [2, "always"],
    "dot-notation": 2,
    "eqeqeq": [2, "smart"],
    "no-use-before-define": 2,
    "no-redeclare": 2,
    "no-inner-declarations": "both",
    "no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
    "no-undef": 2,
    "no-floating-decimal": 2,
    "no-spaced-func": 2,
    "no-extra-parens": 1,
    "no-underscore-dangle": 0,
    "valid-jsdoc": 0,
    "space-after-keywords": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-warning-comments": 0,
    "strict": [2, "global"],
    "eol-last": 0,
    "semi": 2
  }
}
